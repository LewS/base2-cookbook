# Autogenerated by Chef on <%= node["fqdn"] if node["fqdn"] %>
log_facility=daemon
pid_file=<%= node['base2']['nrpe']['pid'] %>
server_port=5666
nrpe_user=<%= node['base2']['nrpe']['user'] %>
nrpe_group=<%= node['base2']['nrpe']['group'] %>
allowed_hosts=<%= node['base2']['nrpe']['allowed_hosts'].join(",") %>

dont_blame_nrpe=<%= node['base2']['nrpe']['dont_blame_nrpe'] %>
allow_bash_command_substitution=<%= node['base2']['nrpe']['allow_bash_command_substitution'] %>
debug=<%= node['base2']['nrpe']['debug'] %>
command_timeout=<%= node['base2']['nrpe']['command_timeout'] %>
connection_timeout=<%= node['base2']['nrpe']['connection_timeout'] %>
command[check_users]=<%= node['base2']['nrpe']['plugin_dir'] %>/check_users -w 5 -c 10
command[check_load]=<%= node['base2']['nrpe']['plugin_dir'] %>/check_load -w 15,10,5 -c 30,25,20
command[check_hda1]=<%= node['base2']['nrpe']['plugin_dir'] %>/check_disk -w 20% -c 10% -p /dev/hda1
command[check_zombie_procs]=<%= node['base2']['nrpe']['plugin_dir'] %>/check_procs -w 5 -c 10 -s Z
command[check_total_procs]=<%= node['base2']['nrpe']['plugin_dir'] %>/check_procs -w 150 -c 200
<% if node['base2']['nrpe']['include_nrpe_local'] %>
include=/etc/nagios/nrpe_local.cfg
<% end %>
include_dir=<%= node['base2']['nrpe']['include_dir'] %>
